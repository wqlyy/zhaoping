<table id="example" class="display table table-hover" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>id</th>
        <th>职位名称</th>
        <th>公司名称</th>
        <th>薪资范围</th>
        <th>发布日期</th>
        <th>职位来源</th>
    </tr>
    </thead>
    <tbody>
   {{#data}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td><a href="{{url}}" target="_blank">{{company}}</a></td>
            <td>{{salary}}</td>
            <td>{{pubdate}}</td>
            <td>{{type}}</td>
        </tr>
    {{/data}}
    </tbody>
</table>

<script>
    $(document).ready(function() {
        $('#example').DataTable({
            "columnDefs":[
                {
                    //设置第一列不参与搜索
